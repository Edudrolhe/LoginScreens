<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLogin3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_pink_gradient">

    <View
        android:id="@+id/blobBottomRight"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:background="@drawable/white_blob"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:translationX="95dp"
        android:translationY="95dp" />

    <TextView
        android:id="@+id/tvTitle3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Member Login"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="42dp" />

    <ImageView
        android:id="@+id/imgLogo3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_logo"
        android:tint="@color/white"
        android:contentDescription="Logo"
        app:layout_constraintTop_toBottomOf="@id/tvTitle3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp" />

    <LinearLayout
        android:id="@+id/container3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/space_l"
        app:layout_constraintTop_toBottomOf="@id/imgLogo3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/etUser3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Username"
            android:background="@drawable/bg_input_white_round"
            android:paddingStart="48dp"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="10dp"
            android:inputType="textPersonName" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_s" />

        <EditText
            android:id="@+id/etPass3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:background="@drawable/bg_input_white_round"
            android:paddingStart="48dp"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:inputType="textPassword" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_m" />

        <Button
            android:id="@+id/btnLogin3"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_round" />

        <TextView
            android:id="@+id/tvBack3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltar"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:padding="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
